# Maintainer: Michael Daffin <michael@daffin.io>
pkgname=skrisna-base
pkgver=3
pkgrel=1
pkgdesc="System config for skrisna systems"
arch=(any)
url="https://github.com/skrisna/arch-pkgs"
license=(MIT)
groups=(skrisna)

provides=(vim vi)
conflicts=(vim vi)
replaces=(vim vi)
install=skrisna-base.install

# Base meta-package
depends=(
    base
)

# Extra general packages
depends+=(
    linux efibootmgr sudo exa dhcpcd man-db
)

# Debugging tools
depends+=(
)

# Shells
depends+=(zsh)

# Filesystems
depends+=()

# Editor
depends+=(neovim)

rootdir=$PWD

package() {
    cp -a "$rootdir/files/"* "$pkgdir"
    chmod -R 0750 "$pkgdir/etc/sudoers.d"
}
